</nav>
  
<div class="container">    
  <div class="row">
    <div class="col-sm-3 well">
      <div class="well center">
      
        <h3> <%= current_user.first_name %> <%= current_user.last_name %></h3>
        <br>
        <div class='circle-icon'>
         <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
	  </div>
	  <br>
	  <p><%= current_user.email %></p>
      </div>
      
      
      
    </div>
    <div class="col-sm-7">
    <div class="row">
       
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <div class="post">
  				<div class="col-lg-8">
    				<div class="input-group">
    					<div class="create" style="min-width: 530px;">
  							
  							<div style="max-width: 400px;">
    							<%= form_for(@post) do |f| %>   
    							<%= f.text_field :content, :class => "form-control text", placeholder: "What's up ?" %> 
    						</div>	
    								<div class="actions"> 
  										<span class="input-group-btn" >
    										<%= f.submit "Feed the Feed !", :class => "btn btn-default" %>
    									</span>
  									</div> 
  									
								<% end %>
    						
    					</div>
 					</div><!-- /input-group -->    
  				</div><!-- /col-lg-6 -->
			</div><!-- /.post -->
            </div>
          </div>
        </div>
      </div>
      
      
   <div class="well left">
   <div class="well white">
       <div class="media">
  
<% @posts.each do |post| %> 

			<div class="media">
				<a class="media-left" href="#">
    				<div class='circle-icon'>
         				<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
	  				</div>
  					</a>
  					<div class="media-body">
    					<h4 class="media-heading"><%= post.user.first_name %> <%= post.user.last_name %></h4>
 						<p><%= post.content %> </p>
 							<br>
 						Submitted <%= time_ago_in_words(post.created_at) %> ago
 							<br>
 							
 							 <%= button_to like_post_path(post), method: :put do %>
  Like
  <%= post.get_upvotes.size %>
<% end %>
 							
 						<a href="/post/<%= post.id %>" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-comment"></span> Comment</a>
  					</div>
			</div>
			
		<hr>
	


<% end %>

</div>
</div>
</div>



   
